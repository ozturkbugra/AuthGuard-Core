@model ResetPasswordViewModel

@{
    ViewData["Title"] = "Şifre Yenile";
    Layout = null; // layout varsa
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container d-flex justify-content-center align-items-center" style="min-height:80vh;">
    <div class="card shadow-lg p-4" style="width: 420px; border-radius:15px;">

        <div class="text-center mb-4">
            <h3 class="fw-bold">Şifre Yenile</h3>
            <p class="text-muted small">Yeni şifrenizi belirleyin</p>
        </div>

        <form asp-action="ResetPassword" method="post">

            <!-- Hidden alanlar -->
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="Token" />

            <div class="mb-3">
                <label class="form-label">Yeni Şifre</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Yeni şifrenizi girin" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Şifre Tekrar</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Şifreyi tekrar girin" />
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">
                Şifreyi Güncelle
            </button>

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success mt-3 text-center">
                    @ViewBag.Message
                </div>
            }

            <div asp-validation-summary="ModelOnly" class="text-danger mt-3 small"></div>

        </form>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

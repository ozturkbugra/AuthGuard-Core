@model UserRoleAssignViewModel

@{
    ViewData["Title"] = "AssingRole";
    Layout = "~/Views/UserLayout/Index.cshtml";

}



<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white">
            <h5>@Model.UserName kullanıcısına rol atama</h5>
        </div>

        <div class="card-body">
            <form asp-action="AssignRole" method="post">
                <input type="hidden" asp-for="UserId" />

                @for (int i = 0; i < Model.Roles.Count; i++)
                {
                    <div class="form-check form-switch mb-2">
                        <input type="hidden" asp-for="Roles[i].RoleID" />
                        <input type="hidden" asp-for="Roles[i].RoleName" />

                        <input asp-for="Roles[i].RoleExist"
                               class="form-check-input"
                               type="checkbox" />

                        <label class="form-check-label">
                            @Model.Roles[i].RoleName
                        </label>
                    </div>
                }

                <button type="submit" class="btn btn-success mt-3">
                    Değişiklikleri Kaydet
                </button>
            </form>
        </div>
    </div>
</div>


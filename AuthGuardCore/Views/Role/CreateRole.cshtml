@model CreateRoleViewModel
@{
    ViewData["Title"] = "CreateRole";
    Layout = "~/Views/UserLayout/Index.cshtml";
}

<div class="form-element-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="form-element-list">
                    <div class="basic-tb-hd">
                        <h2>Rol Ekle</h2>
                    </div>
                    <form method="post">
                        <div class="row">

                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    <div class="nk-int-st">
                                        <input type="text" class="form-control" asp-for="RoleName" placeholder="Rol Adı">
                                    </div>
                                </div>
                            </div>

                            

                            <button class="btn btn-warning" type="submit">Kaydet</button>

                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>

